@{
    ViewBag.Title = "Ana Sayfa";
}

@model web.Controllers.AnaSayfaDTO

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div id="myCarousel" class="carousel slide" data-ride="carousel" style="margin-bottom: 50px">
                    <div class="carousel-inner" role="listbox">
                      
                        @foreach (var item in Model.slider)
                        {
                            <div id="slider" class="item" data-id="@item.ID">
                                @if (item.SliderFoto == null)
                                {
                                    <img src="~/resim/slider1.jpg" alt="@item.SliderText" />

                                }
                                else
                                {
                                    <img style="height:292px;width:%100" src="data:image/png;base64,@System.Convert.ToBase64String(item.SliderFoto)" alt="@item.SliderText">
                                }
                                <div class="carousel-caption">
                                    <h3>@item.SliderText</h3>
                                </div>
                            </div>
                        }
                    </div>
                    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>




